{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Intonation Standard",
    "description": "Intonation Standard describes how microtonal intervals are expressed.",
    "type": ["object", "string"],
    "oneOf": [
        { "$ref": "#/$defs/object" },
        { "$ref": "#/$defs/string" }
    ],
    "$defs": {
        "object": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Intonation Standard Type",
                    "description": "Name that serves as a unique identifier of the Intonation Standard Type.",
                    "enum": ["cents", "justIntonation", "edo"],
                    "default": "cents"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": { "const": "edo" }
                        }
                    },
                    "then": {
                        "properties": {
                            "divisionCount": {
                                "type": "integer",
                                "title": "Division Count",
                                "description": "The number of equal divisions of the octave.",
                                "minimum": 1
                            }
                        }
                    }
                }
            ]
        },
        "string": {
            "$comment": "The Intonation Standard Type can only be set with a string for the types that don't require additional parameters.",
            "type": "string",
            "enum": ["cents", "justIntonation"]
        }
    }
}